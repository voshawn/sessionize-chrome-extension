{
 "manifest_version": 2,
 "name": "Sessionizer",
 "description": "Send your browser session to someone else.",
 "version": "0.1",
 "author": "Shawn Vo",
 "background": {
    "scripts": ["background.js"]
  },
 "browser_action": {
  "default_popup": "popup.html"
 },
 "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["popup.js"]
    }
  ],
  "icons": { "16": "static/icons/icon16.png",
           "48": "static/icons/icon48.png",
          "128": "static/icons/icon128.png" },
  "permissions": [
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ]
}
